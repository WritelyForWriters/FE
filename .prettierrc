{
  "singleQuote": true,
  "semi": false,
  "useTabs": false,
  "tabWidth": 2,
  "trailingComma": "all",
  "printWidth": 100,
  "endOfLine": "auto",
  "importOrder": [
    "^next(/.*)?$",
    "^react(/.*)?$",
    "<THIRD_PARTY_MODULES>",
    "^@layouts/(.*)&",
    "^@components/(.*)$",
    "^@hooks/(.*)$",
    "^@context/(.*)$",
    "^@apis/(.*)$",
    "^@utils/(.*)$",
    "^@types/(.*)$",
    "^[./]",
    ".(css|scss)$",
    "^classnames/bind$"
  ],
  "importOrderSeparation": true,
  "importOrderSortSpecifiers": true,
  "plugins": ["@trivago/prettier-plugin-sort-imports"]
}
